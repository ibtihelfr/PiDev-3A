{% extends 'base.html.twig' %}

{% block title %}Liste des réponses{% endblock %}

{% block body %}
    <h1>Reponse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id du réponse</th>
                <td>{{ reponse.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ reponse.Message }}</td>
            </tr>
            <tr>
                <th>Date du réponse</th>
                <td>{{ reponse.DateReponse ? reponse.DateReponse|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reponse_index') }}">Retour à la liste</a>

    <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">Modifier</a>

    {{ include('reponse/_delete_form.html.twig') }}
{% endblock %}
