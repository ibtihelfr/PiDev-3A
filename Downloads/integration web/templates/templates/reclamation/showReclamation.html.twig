{% extends 'base.html.twig' %}

{% block title %}Liste des réclamations{% endblock %}
{% block titlePage %}<h1> {{ reclamation.Libelle }} </h1>{% endblock %}
{% block body %}

    <section class="ftco-section ftco-no-pb ftco-no-pt bg-light">
        <div class="container">
            <div class="row">
                {% set img = reclamation.Photo %}
                    <img class="col-md-5 p-md-5 img img-2 d-flex justify-content-center align-items-center" src="{{ asset(img) }}">
                <div class="col-md-7 py-md-5 wrap-about pb-md-5 ftco-animate fadeInUp ftco-animated">
                    <div class="heading-section-bold mb-4 mt-md-5">
                        <div class="ml-md-0">
                            <h2 class="mb-4"></h2>
                        </div>
                    </div>
                    <div class="pb-md-5 pb-4">
                        <h4>{{ reclamation.Description }}</h4>
                        <p>{{ reclamation.DateReclamation ? reclamation.DateReclamation|date('Y-m-d') : '' }} </p>
                        <p><a href="{{ path('app_reclamation_index') }}" class="btn btn-primary">Retour</a></p>
                    </div>
                    <div class="flex justify-center align-items flex-row">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ absolute_url(path('app_reclamation_show', {id: reclamation.id})) }}" class="Partager dans les réseaux sociaux">
                            <svg class="w-3 h-3 text-blue-600 fill-current mr-4 icon-facebook" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" style="width: 20px; height: 20px;">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section testimony-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-7" style="left: 36%">
                <div class="heading-section ftco-animate mb-5 fadeInUp ftco-animated">
                    <h2 class="mb-4">Réponses:</h2>
                </div>

{% for reponse in reclamation.reponses %}

                    <div class="owl-item cloned" style="width: 634.987px; margin-right: 30px;border-bottom:  1px solid black"><div class="item">
                            <div class="testimony-wrap">
                                <div class="user-img mb-4">
                                    <img class="user-img mb-4" src="{{ asset('Front/images/person_2.jpg') }}">
                    <span class="quote d-flex align-items-center justify-content-center">
                      <i class="icon-quote-left"></i>
                    </span>
                                </div>
                                <div class="text">
                                    <p class="mb-4 pl-4 line">{{ reponse.Message }}</p>
                                    <p class="name">Amine Sassi</p>
                                    <span class="position">{{ reponse.DateReponse ? reponse.DateReponse|date('Y-m-d') : '' }}</span>
                                </div>
                                {{ include('reponse/deleteF.html.twig') }}
                            </div>
                        </div></div>
    <br>

                {% else %}
                    <div class="col-lg-7" style="left: 22%">
                        <div class="owl-item cloned" style="width: 634.987px; margin-right: 30px;"><div class="item">
                                <div class="testimony-wrap">

                                    <div class="text">
                                        <p class="mb-4 pl-4 line">Pas de réponse</p>

                                    </div>
                                </div>
                            </div></div>
                    </div>

                {% endfor %}


                    <div style="display:flex;justify-content: center;align-items: center;">

                        <a class="btn-primary btn" style="margin-top: 1cm;margin-right: 10cm" href="{{ path('app_reponse_new_front', {'id': reclamation.id})  }}">Répondre</a>


                    </div>
                </div>
            </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
