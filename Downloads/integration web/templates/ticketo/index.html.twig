{% extends 'baseBack.html.twig' %}

{% block title %}Ticketo index{% endblock %}

{% block body %}


    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <h2 class="mb-4">Liste des offres</h2>
                    <p>La liste des ticketOs contenant les détails du logement, restauration ainsi que le prix </p>
                    <h4><a href="{{ path('ticketo_new') }}">Create new</a></h4>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {% for ticketo in ticketos %}
                    <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                        <div class="product d-flex flex-column">
                            <a href="#" class="img-prod"><img class="img-fluid" src={{ asset('images/product-1.png') }} alt="Colorlib">
                                <div class="overlay"></div>
                            </a>
                            <div class="text py-3 pb-4 px-3">
                                <div class="d-flex">
                                    <div class="cat">
                                        <span>Num</span>
                                    </div>
                                    <div class="rating">
                                        <p class="text-right mb-0">
                                            {{ ticketo.numticketo }}
                                        </p>
                                    </div>
                                </div>
                                <div><div class="cat"><span>Logement</span></div>
                                        <h3 class="text-right mb-0">{{ ticketo.logement }}</h3></div>
                                <div><div class="cat"><span>Restauration</span></div>
                                        <h3 class="text-right mb-0">{{ ticketo.restauration }}</h3></div>
                                <div class="pricing">
                                    <p class="price text-center"><span>{{ ticketo.prix }} DT</span></p>
                                </div>
                                <p class="bottom-area d-flex px-3">
                                    <a href="{{ path('ticketo_show', {'numticketo': ticketo.numticketo}) }}"
                                       class="add-to-cart text-center py-2 mr-1"><span>Show
                                            <i class="ion-ios-eye ml-1"></i></span></a>
                                    <a href="{{ path('ticketo_edit', {'numticketo': ticketo.numticketo}) }}"
                                       class="buy-now text-center py-2">Edit
                                        <span><i class="ion-ios-create ml-1"></i></span></a>
                                    <a href="{{ path('sendMailToUser', {'numticketo': ticketo.numticketo}) }}"
                                       class="buy-now text-center py-2">Mail
                                        <span><i class="ion-ios-create ml-1"></i></span></a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center">Aucune ticketO trouvée !! </p>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
