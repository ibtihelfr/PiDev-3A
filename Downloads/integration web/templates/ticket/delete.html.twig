<form method="post" class="text-center" action="{{ path('ticket_delete', {'numticket': ticket.numticket}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.numticket) }}">
    <button class="btn btn-primary py-3 px-5">Supprimer</button>
</form>
