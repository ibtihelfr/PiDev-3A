{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}
{% block body %}


    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <h2 class="mb-4">Liste des produits</h2>
                    <p>La liste des produits offerts </p>
                    <h4><a href="{{ path('app_produit_new') }}">Create new</a></h4>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {% for produit in pagination %}
                    <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                        <div class="product d-flex flex-column">
                            <a href="#" class="img-prod"><img class="img-fluid"
           <a href="{{ path('app_produit_show', {'idproduit': produit.idproduit}) }}" class="block-20" style="background-image: url('{{ asset('uploads/events/' ~ produit.photop) }}');"></a>

                                                              src={{ asset('images/'~produit.photop) }} alt="Colorlib"
                                                              alt="No Image">
                                <div class="overlay"></div>
                            </a>
                            <div class="text py-3 pb-4 px-3">
                                <div class="cat"><h3>{{ produit.descproduit }}</h3></div>
                                <div class="d-flex">
                                    <div class="cat">
                                        <span>Nom</span>
                                    </div>
                                    <div class="rating">
                                        <p class="text-right mb-0">
                                            {{ produit.nomproduit }}
                                        </p>
                                    </div>
                                </div>
                                <div class="cat"><h3>{{ produit.descproduit }}</h3></div>
                                <div class="cat">
                                    <h3>{{ produit.dateproduit ? produit.dateproduit|date('Y-m-d') : '' }}</h3></div>
                                <div class="pricing">
                                    <p class="price text-center"><span>{{ produit.prixproduit }} DT</span></p>
                                    <p class="price text-center"><span>* {{ produit.qte }} articles disponibles</span>
                                    </p>
                                </div>
                                <p class="bottom-area d-flex px-3">
                                    <a href="{{ path('app_produit_show', {'idproduit': produit.idproduit}) }}"
                                       class="add-to-cart text-center py-2 mr-1"><span>Show
                                            <i class="ion-ios-eye ml-1"></i></span></a>
                                   {% if app.user %}
                                        <a href="{{ path('app_produit', {'idproduit': produit.idproduit}) }}"
                                       class="buy-now text-center py-2">Ajouter au panier
                                        <span><i class="ion-ios-create ml-1"></i></span></a> 
                                        {% else %}
                                        <a href="{{  path('app_login') }}"
                                       class="buy-now text-center py-2">Ajouter au panier
                                        <span><i class="ion-ios-create ml-1"></i></span></a> 
        
    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center">Aucun produit trouv√© !! </p>
                {% endfor %}
            </div>
        </div>
        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    </section>
{% endblock %}