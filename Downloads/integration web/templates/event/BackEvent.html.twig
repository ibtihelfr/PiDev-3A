{% extends 'baseBack.html.twig' %}

{% block title %}Event Admin{% endblock %}

{% block body %}
 
                <a href="{{ path('app_event_new') }}">Ajouter un nouvelle événement</a>

           <!--table begin-->
           <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Idevent</th>
                                <th>Nomevent</th>
                                <th>Datedebut</th>
                                <th>Datefin</th>
                                <th>Localisation</th>
                                <th>Description</th>
                                <th>Heureevent</th>
                                <th>Prix</th>
                                <th>Catégorie</th>
                                <th>Photoe</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                                  {% for event in events %}
            <tr>
                <td>{{ event.idevent }}</td>
                <td>{{ event.nomevent }}</td>
                <td>{{ event.datedebut ? event.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ event.datefin ? event.datefin|date('Y-m-d') : '' }}</td>
                <td>{{ event.localisation }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.heureevent }}</td>
                <td>{{ event.prix }}</td>
                <td>{{ event.idCat.nomCat }}</td>
                <td>{% if event.photoe %}
    <img src="{{ asset('uploads/events/' ~ event.photoe) }}" alt="{{ event.photoe }}" style="max-width: 200px;">
{% else %}
    <p>No image available</p>
{% endif %}</td>
                <td>
                   
                    <a href="{{ path('app_event_edit', {'idevent': event.idevent}) }}">edit</a>
<a href="{{ path('generateEvent_pdf', {'idevent': event.idevent}) }}" target="_blank">PDF</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
                        </tbody>
                     
                    </table>
                </div>

            </div>
        </div>        

            <!--table end-->

           
    
{% endblock %}

